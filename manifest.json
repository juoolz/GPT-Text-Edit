{
  "manifest_version": 3,
  "name": "Text Refiner",
  "version": "0.1.0",
  "description": "Refine selected text with OpenAI via a simple popup editor.",
  "permissions": [
    "storage",
    "scripting",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Text Refiner",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
